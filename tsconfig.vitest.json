{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "vitest/globals"
        ],
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/tests/**/*.ts",
        "src/tests/**/*.tsx"
    ],
    "exclude": []
}