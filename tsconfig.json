{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  "strict": true,
  "importHelpers": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@services-alias/*": [
        "./src/services/aliases/*"
      ],
      "@templates/*": [
        "./src/templates/*"
      ]
    },
    "types": [
      "vitest/globals",
      "vitest",
      "node"
    ]
  },
  "include": [
    "src",
    "src/tests"
  ],
  "exclude": [
    "src/pages/examples/**",
    "examples/**",
    "backend-example/**",
    "archived-legacy-editors/**",
    "archived-examples/**",
    "docs/**",
    "src/config/__tests__/**",
    "src/utils/EditorDiagnostics.ts",
    "src/utils/editorDiagnosticsShim.ts",
    "src/hooks/useAutosave.ts",
    "supabase/functions/**"
  ]
}