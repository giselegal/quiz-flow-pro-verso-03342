{
  "templateVersion": "3.1",
  "metadata": {
    "id": "step-01",
    "title": "Bem-vinda ao Quiz de Estilo",
    "description": "Página inicial do quiz",
    "category": "intro",
    "author": "Sistema",
    "createdAt": "2025-01-01T00:00:00Z",
    "updatedAt": "2025-01-01T00:00:00Z"
  },
  "sections": [
    {
      "id": "section-hero",
      "type": "hero",
      "layout": "centered",
      "style": {
        "backgroundColor": "#FFFFFF",
        "padding": "3rem 1.5rem",
        "minHeight": "100vh"
      },
      "blocks": [
        {
          "id": "logo-block",
          "type": "image",
          "order": 0,
          "properties": {
            "src": "https://hhesqkxdbrsgwqmzdkva.supabase.co/storage/v1/object/public/public-assets/logo-quiz.png",
            "alt": "Logo Quiz de Estilo",
            "width": 120,
            "height": 120,
            "style": {
              "margin": "0 auto 2rem",
              "borderRadius": "50%"
            }
          }
        },
        {
          "id": "title-block",
          "type": "heading",
          "order": 1,
          "properties": {
            "text": "Descubra Seu Estilo Único",
            "level": 1,
            "style": {
              "fontSize": "2.5rem",
              "fontWeight": "700",
              "textAlign": "center",
              "marginBottom": "1rem",
              "color": "#1F2937"
            }
          }
        },
        {
          "id": "subtitle-block",
          "type": "text",
          "order": 2,
          "properties": {
            "text": "Responda 21 perguntas e descubra seu perfil de estilo pessoal",
            "style": {
              "fontSize": "1.125rem",
              "textAlign": "center",
              "color": "#6B7280",
              "marginBottom": "2rem"
            }
          }
        },
        {
          "id": "name-input-block",
          "type": "input",
          "order": 3,
          "properties": {
            "placeholder": "Digite seu nome",
            "field": "userName",
            "required": true,
            "validation": {
              "minLength": 2,
              "maxLength": 50,
              "pattern": "^[a-zA-ZÀ-ÿ\\s]+$",
              "message": "Por favor, digite um nome válido"
            },
            "style": {
              "width": "100%",
              "maxWidth": "400px",
              "margin": "0 auto 1.5rem",
              "padding": "0.75rem 1rem",
              "fontSize": "1rem",
              "border": "2px solid #E5E7EB",
              "borderRadius": "0.5rem"
            }
          }
        },
        {
          "id": "start-button-block",
          "type": "button",
          "order": 4,
          "properties": {
            "text": "Começar Quiz",
            "variant": "primary",
            "size": "lg",
            "action": {
              "type": "submit",
              "target": "step-02"
            },
            "style": {
              "width": "100%",
              "maxWidth": "400px",
              "margin": "0 auto",
              "padding": "1rem 2rem",
              "fontSize": "1.125rem",
              "fontWeight": "600",
              "backgroundColor": "#B89B7A",
              "color": "#FFFFFF",
              "border": "none",
              "borderRadius": "0.5rem",
              "cursor": "pointer",
              "transition": "all 0.2s"
            }
          }
        }
      ]
    }
  ],
  "navigation": {
    "nextStep": "step-02",
    "prevStep": null,
    "allowSkip": false,
    "showProgress": false
  },
  "analytics": {
    "trackPageView": true,
    "trackInteractions": true,
    "customEvents": [
      {
        "trigger": "name-input-block:change",
        "eventName": "name_entered"
      },
      {
        "trigger": "start-button-block:click",
        "eventName": "quiz_started"
      }
    ]
  }
}
