{
    "name": "testes-renderizacao-componentes",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "preset": "ts-jest/presets/default-esm",
        "extensionsToTreatAsEsm": [
            ".ts",
            ".tsx"
        ],
        "moduleNameMapping": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/tests/setup-testes.js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(.*\\.mjs$))"
        ],
        "testMatch": [
            "<rootDir>/src/tests/**/*.test.(ts|tsx|js|jsx)"
        ],
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/*.d.ts",
            "!src/tests/**/*"
        ]
    },
    "devDependencies": {
        "@testing-library/react": "^14.0.0",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/user-event": "^14.0.0",
        "jest": "^29.0.0",
        "jest-environment-jsdom": "^29.0.0",
        "ts-jest": "^29.0.0",
        "@types/jest": "^29.0.0"
    }
}