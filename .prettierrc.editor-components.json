{
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  
  "overrides": [
    {
      "files": ["**/OptimizedPropertiesPanel.tsx", "**/editor-fixed*.tsx"],
      "options": {
        "printWidth": 100,
        "singleAttributePerLine": true,
        "jsxBracketSameLine": false
      }
    },
    {
      "files": ["**/*Block.tsx", "**/*Component.tsx"],
      "options": {
        "printWidth": 120,
        "singleAttributePerLine": false
      }
    }
  ]
}
