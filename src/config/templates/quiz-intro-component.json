    "nameField": {
      "required": true,
      "minLength": 1,
      "maxLength": 32,
      "errorMessage": "Por favor, digite seu nome para continuar",
      "realTimeValidation": true
    }
  },
  "analytics": {
    "trackingEvents": [
      "component_mounted",
      "lcp_rendered",
      "user_interaction",
      "form_submit",
      "validation_error"
    ],
    "webVitalsReporting": true
  },
  "logic": {
    "formHandling": {
      "onSubmit": "handleQuizStart",
      "validation": "realTime",
      "errorHandling": "inline"
    },
    "navigation": {
      "nextStep": "step-02",
      "allowBack": false
    },
    "stateManagement": {
      "localState": ["nome", "error"],
      "globalState": ["userName"]
