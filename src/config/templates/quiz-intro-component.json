  "performance": {
    "webVitals": {
      "markComponentMounted": true,
      "markLcpRendered": true,
      "markUserInteraction": true
    },
    "optimizations": {
      "preloadCriticalImages": true,
      "inlineStyles": false,
      "lazyLoadNonCritical": true,
      "useRequestAnimationFrame": true
    }
  },
  "accessibility": {
    "skipLinks": true,
    "ariaLabels": true,
    "focusManagement": true,
    "keyboardNavigation": true,
    "screenReader": true
  },
