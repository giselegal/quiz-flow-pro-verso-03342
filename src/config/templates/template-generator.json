{
  "templateStructure": {
    "basicQuestion": {
      "id": "step-{number}-{slug}",
      "title": "{Question text}",
      "description": "{Helper text}",
      "layout": "vertical",
      "spacing": "md",
      "padding": "p-6",
      "blocks": [
        {
          "id": "step-{number}-progress",
          "type": "progress-inline",
          "order": 1,
          "properties": {
            "currentStep": "{number - 1}",
            "totalSteps": 19,
            "marginBottom": 32
          }
        },
        {
          "id": "step-{number}-question-header",
          "type": "heading-inline",
          "order": 2,
          "properties": {
            "text": "{Question text}",
            "level": 2,
            "textAlign": "center",
            "marginBottom": 32
          }
        },
        {
          "id": "step-{number}-options-grid",
          "type": "options-grid-inline",
          "order": 3,
          "properties": {
            "questionId": "{question-id}",
            "allowMultiple": false,
            "minSelections": 1,
            "maxSelections": 1,
            "options": "{options array}"
          }
        },
        {
          "id": "step-{number}-next-button",
          "type": "button-inline-fixed",
          "order": 4,
          "properties": {
            "text": "Continuar",
            "action": "next-step",
            "requiresValidation": true
          }
        }
      ]
    }
  },
  "remainingSteps": [
    {
      "step": 7,
      "title": "Qual é o tamanho do ambiente principal?",
      "questionId": "room-size",
      "options": [
        { "text": "Pequeno (até 20m²)", "value": "small" },
        { "text": "Médio (20-40m²)", "value": "medium" },
        { "text": "Grande (40-60m²)", "value": "large" },
        { "text": "Muito Grande (60m²+)", "value": "xlarge" }
      ]
    },
    {
      "step": 8,
      "title": "Como você pretende usar o espaço?",
      "questionId": "room-function",
      "allowMultiple": true,
      "maxSelections": 3,
      "options": [
        { "text": "Relaxar e descansar", "value": "relax" },
        { "text": "Trabalhar/estudar", "value": "work" },
        { "text": "Receber visitas", "value": "entertain" },
        { "text": "Atividades familiares", "value": "family" },
        { "text": "Hobbies criativos", "value": "creative" }
      ]
    }
  ]
}
