    "subtitle": {
      "type": "string",
      "default": "",
      "label": "Subtítulo",
      "control": "text"
    },
    "fontSize": {
      "type": "string",
      "default": "xl",
      "label": "Tamanho da Fonte",
      "control": "dropdown",
      "options": [
        { "label": "Normal", "value": "base" },
        { "label": "Grande", "value": "lg" },
        { "label": "Extra Grande", "value": "xl" },
        { "label": "2X Grande", "value": "2xl" }
      ]
    }
  }
