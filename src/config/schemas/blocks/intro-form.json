      "validation": {
        "required": false
      }
    },
    "buttonText": {
      "type": "string",
      "default": "Começar",
      "label": "Texto do Botão",
      "control": "text"
    },
    "submitAction": {
      "type": "string",
      "default": "next",
      "label": "Ação ao Submeter",
      "control": "dropdown",
      "options": [
        { "label": "Próxima Etapa", "value": "next" },
        { "label": "Enviar Dados", "value": "submit" },
        { "label": "Custom", "value": "custom" }
