    "fontSize": {
      "type": "string",
      "default": "2xl",
      "label": "Tamanho da Fonte",
      "control": "dropdown",
      "options": [
        { "label": "Pequeno", "value": "lg" },
        { "label": "Médio", "value": "xl" },
        { "label": "Grande", "value": "2xl" },
        { "label": "Extra Grande", "value": "3xl" }
      ]
    },
    "textAlign": {
      "type": "string",
      "default": "center",
      "label": "Alinhamento",
      "control": "dropdown",
      "options": [
        { "label": "Esquerda", "value": "left" },
        { "label": "Centro", "value": "center" },
        { "label": "Direita", "value": "right" }
