{
  "id": "offer-hero",
  "type": "offer-hero",
  "version": "1.0.0",
  "category": "offer",
  "label": "Hero de Oferta",
  "description": "Seção hero principal da página de oferta",
  "icon": "Sparkles",
  "renderingStrategy": "static",
  "properties": {
    "title": {
      "type": "string",
      "default": "Oferta Especial",
      "label": "Título Principal",
      "control": "textarea",
      "validation": {
        "maxLength": 200
      }
    },
    "subtitle": {
      "type": "string",
      "default": "",
      "label": "Subtítulo",
      "control": "textarea"
    },
    "backgroundImage": {
      "type": "string",
      "default": "",
      "label": "Imagem de Fundo",
      "control": "image-upload"
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.5,
      "label": "Opacidade do Overlay",
      "control": "number",
      "validation": {
        "min": 0,
        "max": 1
      }
    },
    "textAlign": {
      "type": "string",
      "default": "center",
      "label": "Alinhamento do Texto",
      "control": "dropdown",
      "options": [
        { "label": "Esquerda", "value": "left" },
        { "label": "Centro", "value": "center" },
        { "label": "Direita", "value": "right" }
      ]
    }
  }
}
