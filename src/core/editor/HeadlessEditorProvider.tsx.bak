/**
 * üé® INTEGRA√á√ÉO COM EDITOR VISUAL HEADLESS
 * 
 * Sistema para integrar o esquema unificado com o editor visual /editor,
 * permitindo edi√ß√£o ao vivo, painel de propriedades completo e preview real.
 */

import React, { useState, useEffect, useCallback, useMemo } from 'react';
import { QuizFunnelSchema, FunnelStep } from '../../types/quiz-schema';
import { QuizTemplateAdapter } from '../migration/QuizTemplateAdapter';
import EditorDataService from './services/EditorDataService';

// ============================================================================
// CONTEXTO DO EDITOR HEADLESS
// ============================================================================

interface HeadlessEditorContextType {
  // Schema atual
  schema: QuizFunnelSchema | null;

  // Estado do editor
  isLoading: boolean;
  isDirty: boolean;
  lastSaved: string | null;

  // Etapa atual sendo editada
  currentStep: FunnelStep | null;
  currentStepIndex: number;

  // A√ß√µes do editor
  loadSchema: (schemaId?: string) => Promise<void>;
  saveSchema: () => Promise<void>;
  updateStep: (stepId: string, updates: Partial<FunnelStep>) => void;
  updateGlobalSettings: (updates: Partial<QuizFunnelSchema['settings']>) => void;
  updatePublicationSettings: (updates: Partial<QuizFunnelSchema['publication']>) => void;

  // Navega√ß√£o
  selectStep: (stepId: string) => void;
  goToStep: (index: number) => void;
  addStep: (afterStepId?: string) => void;
  removeStep: (stepId: string) => void;

  // Preview
  previewMode: 'desktop' | 'tablet' | 'mobile';
  setPreviewMode: (mode: 'desktop' | 'tablet' | 'mobile') => void;

  // Publica√ß√£o
  publishSchema: () => Promise<void>;
  unpublishSchema: () => Promise<void>;

  // Valida√ß√£o
  validationErrors: ValidationError[];
  validateSchema: () => ValidationError[];
}

interface ValidationError {
  path: string;
  message: string;
  severity: 'error' | 'warning' | 'info';
}

const HeadlessEditorContext = React.createContext<HeadlessEditorContextType | null>(null);

// ============================================================================
// PROVIDER DO EDITOR HEADLESS
// ============================================================================

interface HeadlessEditorProviderProps {
  children: React.ReactNode;
  schemaId?: string;
  autoSave?: boolean;
  autoSaveInterval?: number;
}

export const HeadlessEditorProvider: React.FC<HeadlessEditorProviderProps> = ({
  children,
  schemaId,
  autoSave = true,
  autoSaveInterval = 30000
}) => {
  // Estados principais
  const [schema, setSchema] = useState<QuizFunnelSchema | null>(null);
  const [isLoading, setIsLoading] = useState(false);
  const [isDirty, setIsDirty] = useState(false);
  const [lastSaved, setLastSaved] = useState<string | null>(null);
  const [currentStepIndex, setCurrentStepIndex] = useState(0);
  const [previewMode, setPreviewMode] = useState<'desktop' | 'tablet' | 'mobile'>('desktop');
  const [validationErrors, setValidationErrors] = useState<ValidationError[]>([]);

  // Inst√¢ncia do EditorDataService
  const dataService = useMemo(() => 
    EditorDataService.getInstance({
      autoSave,
      autoSaveInterval,
      enableCache: true,
      enableValidation: true,
    }), [autoSave, autoSaveInterval]
  );

  // Estado computado
  const currentStep = useMemo(() => {
    return schema?.steps[currentStepIndex] || null;
  }, [schema, currentStepIndex]);

  // ============================================================================
  // SINCRONIZA√á√ÉO COM EDITORDATA SERVICE
  // ============================================================================

  useEffect(() => {
    // Listener para mudan√ßas do EditorDataService
    const unsubscribe = dataService.addChangeListener((event) => {
      console.log('üîÑ Schema atualizado via EditorDataService:', event);
      
      const updatedSchema = dataService.getCurrentSchema();
      if (updatedSchema) {
        setSchema(updatedSchema);
        setIsDirty(dataService.isDirtySchema());
        setLastSaved(updatedSchema.editorMeta.lastModified);
      }
    });

    return unsubscribe;
  }, [dataService]);

  // ============================================================================
  // CARREGAMENTO DE SCHEMA INTEGRADO COM JSON
  // ============================================================================

  const loadSchema = useCallback(async (targetSchemaId?: string) => {
    setIsLoading(true);
    try {
      let loadedSchema: QuizFunnelSchema;

      if (targetSchemaId) {
        // Usar EditorDataService para carregamento inteligente
        try {
          // Tentar carregar como template JSON primeiro
          loadedSchema = await dataService.loadSchemaFromJson('template', targetSchemaId);
          console.log('‚úÖ Schema carregado de template JSON');
        } catch {
          try {
            // Fallback para schema salvo
            loadedSchema = await dataService.loadSchemaFromJson('saved', targetSchemaId);
            console.log('‚úÖ Schema carregado de localStorage');
          } catch {
            // √öltimo fallback - migra√ß√£o legacy
            console.log('üîÑ Carregando schema atrav√©s de migra√ß√£o do template legacy...');
            loadedSchema = await QuizTemplateAdapter.convertLegacyTemplate();
          }
        }
      } else {
        // Migrar do template legacy se nenhum ID especificado
        console.log('üîÑ Carregando schema atrav√©s de migra√ß√£o do template legacy...');
        loadedSchema = await QuizTemplateAdapter.convertLegacyTemplate();
      }

      setSchema(loadedSchema);
      setCurrentStepIndex(0);
      setIsDirty(false);
      setLastSaved(loadedSchema.editorMeta.lastModified);

      // Validar schema carregado
      const errors = validateSchemaInternal(loadedSchema);
      setValidationErrors(errors);

      console.log('‚úÖ Schema carregado com sucesso:', loadedSchema.id);

    } catch (error) {
      console.error('‚ùå Erro ao carregar schema:', error);
      throw error;
    } finally {
      setIsLoading(false);
    }
  }, [dataService]);

  // ============================================================================
  // SALVAMENTO DE SCHEMA INTEGRADO COM JSON
  // ============================================================================

  const saveSchema = useCallback(async () => {
    if (!schema || !isDirty) return;

    setIsLoading(true);
    try {
      // Usar EditorDataService para salvamento inteligente
      const results = await dataService.saveSchema();
      
      const successfulSaves = results.filter(r => r.success);
      if (successfulSaves.length > 0) {
        setIsDirty(false);
        setLastSaved(new Date().toISOString());
        
        console.log('‚úÖ Schema salvo com sucesso:', successfulSaves.map(r => r.location));
      } else {
        console.warn('‚ö†Ô∏è Nenhum salvamento foi bem-sucedido:', results);
      }

    } catch (error) {
      console.error('‚ùå Erro ao salvar schema:', error);
      throw error;
    } finally {
      setIsLoading(false);
    }
  }, [schema, isDirty, dataService]);

  // ============================================================================
  // ATUALIZA√á√ïES DE CONTE√öDO INTEGRADAS COM JSON
  // ============================================================================

  const updateStep = useCallback((stepId: string, updates: Partial<FunnelStep>) => {
    if (!schema) return;

    // Usar EditorDataService para atualiza√ß√µes
    dataService.updateStep(stepId, updates);
    
    console.log(`üìù Etapa ${stepId} atualizada via EditorDataService`);
  }, [schema, dataService]);

  const updateGlobalSettings = useCallback((updates: Partial<QuizFunnelSchema['settings']>) => {
    if (!schema) return;

    // Usar EditorDataService para atualiza√ß√µes globais
    dataService.updateGlobalSettings(updates);

    console.log('‚öôÔ∏è Configura√ß√µes globais atualizadas via EditorDataService');
  }, [schema, dataService]);

  const updatePublicationSettings = useCallback((updates: Partial<QuizFunnelSchema['publication']>) => {
    if (!schema) return;

    // Usar EditorDataService para atualiza√ß√µes de publica√ß√£o
    dataService.updatePublicationSettings(updates);

    console.log('üöÄ Configura√ß√µes de publica√ß√£o atualizadas via EditorDataService');
  }, [schema, dataService]);

  // ============================================================================
  // NAVEGA√á√ÉO ENTRE ETAPAS
  // ============================================================================

  const selectStep = useCallback((stepId: string) => {
    if (!schema) return;

    const stepIndex = schema.steps.findIndex(step => step.id === stepId);
    if (stepIndex !== -1) {
      setCurrentStepIndex(stepIndex);
      console.log(`üëÜ Etapa selecionada: ${stepId}`);
    }
  }, [schema]);

  const goToStep = useCallback((index: number) => {
    if (!schema || index < 0 || index >= schema.steps.length) return;

    setCurrentStepIndex(index);
    console.log(`‚û°Ô∏è Navegando para etapa ${index + 1}`);
  }, [schema]);

  // ============================================================================
  // MANIPULA√á√ÉO DE ETAPAS
  // ============================================================================

  const addStep = useCallback((afterStepId?: string) => {
    if (!schema) return;

    let insertIndex = schema.steps.length;
    if (afterStepId) {
      const afterIndex = schema.steps.findIndex(step => step.id === afterStepId);
      if (afterIndex !== -1) {
        insertIndex = afterIndex + 1;
      }
    }

    const newStepNumber = Math.max(...schema.steps.map(s => s.order)) + 1;
    const newStep: FunnelStep = {
      id: `step-${newStepNumber}`,
      name: `Nova Etapa ${newStepNumber}`,
      description: 'Etapa criada pelo editor',
      order: newStepNumber,
      type: 'custom',

      settings: {
        showProgress: true,
        progressStyle: 'bar',
        showBackButton: true,
        showNextButton: true,
        allowSkip: false,
        trackTimeOnStep: true,
        trackInteractions: true,
        customEvents: []
      },

      blocks: []
    };

    const updatedSteps = [...schema.steps];
    updatedSteps.splice(insertIndex, 0, newStep);

    setSchema({ ...schema, steps: updatedSteps });
    setIsDirty(true);

    console.log(`‚ûï Nova etapa adicionada: ${newStep.id}`);
  }, [schema]);

  const removeStep = useCallback((stepId: string) => {
    if (!schema) return;

    const updatedSteps = schema.steps.filter(step => step.id !== stepId);
    
    if (updatedSteps.length === 0) {
      console.warn('‚ö†Ô∏è N√£o √© poss√≠vel remover a √∫ltima etapa');
      return;
    }

    setSchema({ ...schema, steps: updatedSteps });
    setIsDirty(true);

    // Ajustar currentStepIndex se necess√°rio
    if (currentStepIndex >= updatedSteps.length) {
      setCurrentStepIndex(updatedSteps.length - 1);
    }

    console.log(`üóëÔ∏è Etapa removida: ${stepId}`);
  }, [schema, currentStepIndex]);

  // ============================================================================
  // PUBLICA√á√ÉO
  // ============================================================================

  const publishSchema = useCallback(async () => {
    if (!schema) return;

    try {
      // Atualizar status para publicado
      const publicationUpdates = {
        status: 'published' as const,
        publishedAt: new Date().toISOString(),
      };

      dataService.updatePublicationSettings(publicationUpdates);
      
      console.log('üöÄ Schema publicado com sucesso');
    } catch (error) {
      console.error('‚ùå Erro ao publicar schema:', error);
      throw error;
    }
  }, [schema, dataService]);

  const unpublishSchema = useCallback(async () => {
    if (!schema) return;

    try {
      // Atualizar status para rascunho
      const publicationUpdates = {
        status: 'draft' as const,
        publishedAt: undefined,
      };

      dataService.updatePublicationSettings(publicationUpdates);
      
      console.log('üìù Schema despublicado (retornado para rascunho)');
    } catch (error) {
      console.error('‚ùå Erro ao despublicar schema:', error);
      throw error;
    }
  }, [schema, dataService]);

  // ============================================================================
  // VALIDA√á√ÉO
  // ============================================================================

  const validateSchema = useCallback((): ValidationError[] => {
    if (!schema) return [];

    const errors = validateSchemaInternal(schema);
    setValidationErrors(errors);
    
    return errors;
  }, [schema]);

  // ============================================================================
  // AUTO SAVE
  // ============================================================================

  useEffect(() => {
    if (!autoSave || !isDirty) return;

    const autoSaveTimer = setTimeout(() => {
      saveSchema();
    }, autoSaveInterval);

    return () => clearTimeout(autoSaveTimer);
  }, [autoSave, autoSaveInterval, isDirty, saveSchema]);

  // ============================================================================
  // INICIALIZA√á√ÉO
  // ============================================================================

  useEffect(() => {
    loadSchema(schemaId);
  }, [loadSchema, schemaId]);

  // ============================================================================
  // CONTEXT VALUE
  // ============================================================================

  const contextValue: HeadlessEditorContextType = {
    schema,
    isLoading,
    isDirty,
    lastSaved,
    currentStep,
    currentStepIndex,

    loadSchema,
    saveSchema,
    updateStep,
    updateGlobalSettings,
    updatePublicationSettings,

    selectStep,
    goToStep,
    addStep,
    removeStep,

    previewMode,
    setPreviewMode,

    publishSchema,
    unpublishSchema,

    validationErrors,
    validateSchema
  };

  return (
    <HeadlessEditorContext.Provider value={contextValue}>
      {children}
    </HeadlessEditorContext.Provider>
  );
};

// ============================================================================
// HOOK PARA USAR O CONTEXTO
// ============================================================================

export const useHeadlessEditor = () => {
  const context = React.useContext(HeadlessEditorContext);
  if (!context) {
    throw new Error('useHeadlessEditor deve ser usado dentro de HeadlessEditorProvider');
  }
  return context;
};

// ============================================================================
// UTILIT√ÅRIOS INTERNOS
// ============================================================================

function validateSchemaInternal(schema: QuizFunnelSchema): ValidationError[] {
  const errors: ValidationError[] = [];

  // Valida√ß√µes b√°sicas
  if (!schema.id) {
    errors.push({
      path: 'id',
      message: 'ID do schema √© obrigat√≥rio',
      severity: 'error'
    });
  }

  if (!schema.name) {
    errors.push({
      path: 'name',
      message: 'Nome do schema √© obrigat√≥rio',
      severity: 'error'
    });
  }

  if (schema.steps.length === 0) {
    errors.push({
      path: 'steps',
      message: 'Schema deve ter pelo menos uma etapa',
      severity: 'error'
    });
  }

  // Validar etapas
  schema.steps.forEach((step, index) => {
    if (!step.id) {
      errors.push({
        path: `steps[${index}].id`,
        message: 'ID da etapa √© obrigat√≥rio',
        severity: 'error'
      });
    }

    if (!step.name) {
      errors.push({
        path: `steps[${index}].name`,
        message: 'Nome da etapa √© obrigat√≥rio',
        severity: 'error'
      });
    }

    if (step.blocks.length === 0) {
      errors.push({
        path: `steps[${index}].blocks`,
        message: `Etapa "${step.name}" n√£o possui blocos de conte√∫do`,
        severity: 'warning'
      });
    }
  });

  // Validar configura√ß√µes de SEO
  if (!schema.settings?.seo?.title) {
    errors.push({
      path: 'settings.seo.title',
      message: 'T√≠tulo SEO √© obrigat√≥rio',
      severity: 'warning'
    });
  }

  if (!schema.settings?.seo?.description) {
    errors.push({
      path: 'settings.seo.description',
      message: 'Descri√ß√£o SEO √© obrigat√≥ria',
      severity: 'warning'
    });
  }

  return errors;
}

import React, { useState, useEffect, useCallback, useMemo } from 'react';
import { QuizFunnelSchema, FunnelStep } from '../../types/quiz-schema';
import { QuizTemplateAdapter } from '../migration/QuizTemplateAdapter';
import EditorDataService from './services/EditorDataService';

// ============================================================================
// CONTEXTO DO EDITOR HEADLESS
// ============================================================================

interface HeadlessEditorContextType {
  // Schema atual
  schema: QuizFunnelSchema | null;

  // Estado do editor
  isLoading: boolean;
  isDirty: boolean;
  lastSaved: string | null;

  // Etapa atual sendo editada
  currentStep: FunnelStep | null;
  currentStepIndex: number;

  // A√ß√µes do editor
  loadSchema: (schemaId?: string) => Promise<void>;
  saveSchema: () => Promise<void>;
  updateStep: (stepId: string, updates: Partial<FunnelStep>) => void;
  updateGlobalSettings: (updates: Partial<QuizFunnelSchema['settings']>) => void;
  updatePublicationSettings: (updates: Partial<QuizFunnelSchema['publication']>) => void;

  // Navega√ß√£o
  selectStep: (stepId: string) => void;
  goToStep: (index: number) => void;
  addStep: (afterStepId?: string) => void;
  removeStep: (stepId: string) => void;

  // Preview
  previewMode: 'desktop' | 'tablet' | 'mobile';
  setPreviewMode: (mode: 'desktop' | 'tablet' | 'mobile') => void;

  // Publica√ß√£o
  publishSchema: () => Promise<void>;
  unpublishSchema: () => Promise<void>;

  // Valida√ß√£o
  validationErrors: ValidationError[];
  validateSchema: () => ValidationError[];
}

interface ValidationError {
  path: string;
  message: string;
  severity: 'error' | 'warning' | 'info';
}

const HeadlessEditorContext = React.createContext<HeadlessEditorContextType | null>(null);

// ============================================================================
// PROVIDER DO EDITOR HEADLESS
// ============================================================================

interface HeadlessEditorProviderProps {
  children: React.ReactNode;
  schemaId?: string;
  autoSave?: boolean;
  autoSaveInterval?: number;
}

export const HeadlessEditorProvider: React.FC<HeadlessEditorProviderProps> = ({
  children,
  schemaId,
  autoSave = true,
  autoSaveInterval = 30000
}) => {
  // Estados principais
  const [schema, setSchema] = useState<QuizFunnelSchema | null>(null);
  const [isLoading, setIsLoading] = useState(false);
  const [isDirty, setIsDirty] = useState(false);
  const [lastSaved, setLastSaved] = useState<string | null>(null);
  const [currentStepIndex, setCurrentStepIndex] = useState(0);
  const [previewMode, setPreviewMode] = useState<'desktop' | 'tablet' | 'mobile'>('desktop');
  const [validationErrors, setValidationErrors] = useState<ValidationError[]>([]);

  // Inst√¢ncia do EditorDataService
  const dataService = useMemo(() => 
    EditorDataService.getInstance({
      autoSave,
      autoSaveInterval,
      enableCache: true,
      enableValidation: true,
    }), [autoSave, autoSaveInterval]
  );

  // Estado computado
  const currentStep = useMemo(() => {
    return schema?.steps[currentStepIndex] || null;
  }, [schema, currentStepIndex]);

  // ============================================================================
  // SINCRONIZA√á√ÉO COM EDITORDATA SERVICE
  // ============================================================================

  useEffect(() => {
    // Listener para mudan√ßas do EditorDataService
    const unsubscribe = dataService.addChangeListener((event) => {
      console.log('üîÑ Schema atualizado via EditorDataService:', event);
      
      const updatedSchema = dataService.getCurrentSchema();
      if (updatedSchema) {
        setSchema(updatedSchema);
        setIsDirty(dataService.isDirtySchema());
        setLastSaved(updatedSchema.editorMeta.lastModified);
      }
    });

    return unsubscribe;
  }, [dataService]);

  // ============================================================================
  // CARREGAMENTO DE SCHEMA INTEGRADO COM JSON
  // ============================================================================

  const loadSchema = useCallback(async (targetSchemaId?: string) => {
    setIsLoading(true);
    try {
      let loadedSchema: QuizFunnelSchema;

      if (targetSchemaId) {
        // Usar EditorDataService para carregamento inteligente
        try {
          // Tentar carregar como template JSON primeiro
          loadedSchema = await dataService.loadSchemaFromJson('template', targetSchemaId);
          console.log('‚úÖ Schema carregado de template JSON');
        } catch {
          try {
            // Fallback para schema salvo
            loadedSchema = await dataService.loadSchemaFromJson('saved', targetSchemaId);
            console.log('‚úÖ Schema carregado de localStorage');
          } catch {
            // √öltimo fallback - migra√ß√£o legacy
            console.log('üîÑ Carregando schema atrav√©s de migra√ß√£o do template legacy...');
            loadedSchema = await QuizTemplateAdapter.convertLegacyTemplate();
          }
        }
      } else {
        // Migrar do template legacy se nenhum ID especificado
        console.log('üîÑ Carregando schema atrav√©s de migra√ß√£o do template legacy...');
        loadedSchema = await QuizTemplateAdapter.convertLegacyTemplate();
      }

      setSchema(loadedSchema);
      setCurrentStepIndex(0);
      setIsDirty(false);
      setLastSaved(loadedSchema.editorMeta.lastModified);

      // Validar schema carregado
      const errors = validateSchemaInternal(loadedSchema);
      setValidationErrors(errors);

      console.log('‚úÖ Schema carregado com sucesso:', loadedSchema.id);

    } catch (error) {
      console.error('‚ùå Erro ao carregar schema:', error);
      throw error;
    } finally {
      setIsLoading(false);
    }
  }, [dataService]);

  // ============================================================================
  // SALVAMENTO DE SCHEMA INTEGRADO COM JSON
  // ============================================================================

  const saveSchema = useCallback(async () => {
    if (!schema || !isDirty) return;

    setIsLoading(true);
    try {
      // Usar EditorDataService para salvamento inteligente
      const results = await dataService.saveSchema();
      
      const successfulSaves = results.filter(r => r.success);
      if (successfulSaves.length > 0) {
        setIsDirty(false);
        setLastSaved(new Date().toISOString());
        
        console.log('‚úÖ Schema salvo com sucesso:', successfulSaves.map(r => r.location));
      } else {
        console.warn('‚ö†Ô∏è Nenhum salvamento foi bem-sucedido:', results);
      }

    } catch (error) {
      console.error('‚ùå Erro ao salvar schema:', error);
      throw error;
    } finally {
      setIsLoading(false);
    }
  // ============================================================================
  // ATUALIZA√á√ïES DE CONTE√öDO INTEGRADAS COM JSON
  // ============================================================================

  const updateStep = useCallback((stepId: string, updates: Partial<FunnelStep>) => {
    if (!schema) return;

    // Usar EditorDataService para atualiza√ß√µes
    dataService.updateStep(stepId, updates);
    
    console.log(`üìù Etapa ${stepId} atualizada via EditorDataService`);
  }, [schema, dataService]);

  const updateGlobalSettings = useCallback((updates: Partial<QuizFunnelSchema['settings']>) => {
    if (!schema) return;

    // Usar EditorDataService para atualiza√ß√µes globais
    dataService.updateGlobalSettings(updates);

    console.log('‚öôÔ∏è Configura√ß√µes globais atualizadas via EditorDataService');
  }, [schema, dataService]);

  const updatePublicationSettings = useCallback((updates: Partial<QuizFunnelSchema['publication']>) => {
    if (!schema) return;

    // Usar EditorDataService para atualiza√ß√µes de publica√ß√£o
    dataService.updatePublicationSettings(updates);

    console.log('üöÄ Configura√ß√µes de publica√ß√£o atualizadas via EditorDataService');
  }, [schema, dataService]);

  // ============================================================================
  // NAVEGA√á√ÉO ENTRE ETAPAS
  // ============================================================================

  const selectStep = useCallback((stepId: string) => {
    if (!schema) return;

    const stepIndex = schema.steps.findIndex(step => step.id === stepId);
    if (stepIndex !== -1) {
      setCurrentStepIndex(stepIndex);
      console.log(`üëÜ Etapa selecionada: ${stepId}`);
    }
  }, [schema]);

  const goToStep = useCallback((index: number) => {
    if (!schema || index < 0 || index >= schema.steps.length) return;

    setCurrentStepIndex(index);
    console.log(`‚û°Ô∏è Navegando para etapa ${index + 1}`);
  }, [schema]);

  // ============================================================================
  // MANIPULA√á√ÉO DE ETAPAS
  // ============================================================================

  const addStep = useCallback((afterStepId?: string) => {
    if (!schema) return;

    let insertIndex = schema.steps.length;
    if (afterStepId) {
      const afterIndex = schema.steps.findIndex(step => step.id === afterStepId);
      if (afterIndex !== -1) {
        insertIndex = afterIndex + 1;
      }
    }

    const newStepNumber = Math.max(...schema.steps.map(s => s.order)) + 1;
    const newStep: FunnelStep = {
      id: `step-${newStepNumber}`,
      name: `Nova Etapa ${newStepNumber}`,
      description: 'Etapa criada pelo editor',
      order: newStepNumber,
      type: 'custom',

      settings: {
        showProgress: true,
        progressStyle: 'bar',
        showBackButton: true,
        showNextButton: true,
        allowSkip: false,
        trackTimeOnStep: true,
        trackInteractions: true,
        customEvents: []
      },

      blocks: [],

      navigation: {
        conditions: [],
        nextStep: undefined,
        prevStep: insertIndex > 0 ? schema.steps[insertIndex - 1].id : undefined,
        actions: []
      },

      validation: {
        required: false,
        customRules: [],
        errorMessages: {}
      }
    };

    const updatedSteps = [
      ...schema.steps.slice(0, insertIndex),
      newStep,
      ...schema.steps.slice(insertIndex)
    ];

    setSchema({ ...schema, steps: updatedSteps });
    setIsDirty(true);
    setCurrentStepIndex(insertIndex);

    console.log(`‚ûï Nova etapa adicionada: ${newStep.id}`);
  }, [schema]);

  const removeStep = useCallback((stepId: string) => {
    if (!schema) return;

    const stepIndex = schema.steps.findIndex(step => step.id === stepId);
    if (stepIndex === -1) return;

    const updatedSteps = schema.steps.filter(step => step.id !== stepId);

    // Ajustar √≠ndice atual se necess√°rio
    let newCurrentIndex = currentStepIndex;
    if (stepIndex <= currentStepIndex && currentStepIndex > 0) {
      newCurrentIndex = currentStepIndex - 1;
    }

    setSchema({ ...schema, steps: updatedSteps });
    setIsDirty(true);
    setCurrentStepIndex(newCurrentIndex);

    console.log(`‚ùå Etapa removida: ${stepId}`);
  }, [schema, currentStepIndex]);

  // ============================================================================
  // PUBLICA√á√ÉO
  // ============================================================================

  const publishSchema = useCallback(async () => {
    if (!schema) return;

    // Validar antes de publicar
    const errors = validateSchemaInternal(schema);
    const criticalErrors = errors.filter(e => e.severity === 'error');

    if (criticalErrors.length > 0) {
      throw new Error(`N√£o √© poss√≠vel publicar: ${criticalErrors.map(e => e.message).join(', ')}`);
    }

    const publishedSchema: QuizFunnelSchema = {
      ...schema,
      publication: {
        ...schema.publication,
        status: 'published',
        publishedAt: new Date().toISOString()
      }
    };

    await saveSchemaToStorage(publishedSchema);
    setSchema(publishedSchema);
    setIsDirty(false);

    console.log('üöÄ Schema publicado com sucesso!');
  }, [schema]);

  const unpublishSchema = useCallback(async () => {
    if (!schema) return;

    const unpublishedSchema: QuizFunnelSchema = {
      ...schema,
      publication: {
        ...schema.publication,
        status: 'draft'
      }
    };

    await saveSchemaToStorage(unpublishedSchema);
    setSchema(unpublishedSchema);
    setIsDirty(false);

    console.log('üìù Schema despublicado');
  }, [schema]);

  // ============================================================================
  // VALIDA√á√ÉO
  // ============================================================================

  const validateSchema = useCallback((): ValidationError[] => {
    if (!schema) return [];

    const errors = validateSchemaInternal(schema);
    setValidationErrors(errors);
    return errors;
  }, [schema]);

  // ============================================================================
  // MANIPULA√á√ÉO DE ETAPAS
  // ============================================================================

  const addStep = useCallback((afterStepId?: string) => {
    if (!schema) return;

    let insertIndex = schema.steps.length;
    if (afterStepId) {
      const afterIndex = schema.steps.findIndex(step => step.id === afterStepId);
      if (afterIndex !== -1) {
        insertIndex = afterIndex + 1;
      }
    }

    const newStepNumber = Math.max(...schema.steps.map(s => s.order)) + 1;
    const newStep: FunnelStep = {
      id: `step-${newStepNumber}`,
      name: `Nova Etapa ${newStepNumber}`,
      description: 'Etapa criada pelo editor',
      order: newStepNumber,
      type: 'custom',

      settings: {
        showProgress: true,
        showBackButton: true,
        allowSkip: false,
      },

      blocks: []
    };

    const updatedSteps = [...schema.steps];
    updatedSteps.splice(insertIndex, 0, newStep);

    setSchema({ ...schema, steps: updatedSteps });
    setIsDirty(true);

    console.log(`‚ûï Nova etapa adicionada: ${newStep.id}`);
  }, [schema]);

  const removeStep = useCallback((stepId: string) => {
    if (!schema) return;

    const updatedSteps = schema.steps.filter(step => step.id !== stepId);
    
    if (updatedSteps.length === 0) {
      console.warn('‚ö†Ô∏è N√£o √© poss√≠vel remover a √∫ltima etapa');
      return;
    }

    setSchema({ ...schema, steps: updatedSteps });
    setIsDirty(true);

    // Ajustar currentStepIndex se necess√°rio
    if (currentStepIndex >= updatedSteps.length) {
      setCurrentStepIndex(updatedSteps.length - 1);
    }

    console.log(`üóëÔ∏è Etapa removida: ${stepId}`);
  }, [schema, currentStepIndex]);

  // ============================================================================
  // PUBLICA√á√ÉO
  // ============================================================================

  const publishSchema = useCallback(async () => {
    if (!schema) return;

    try {
      // Atualizar status para publicado
      const publicationUpdates = {
        status: 'published' as const,
        publishedAt: new Date().toISOString(),
      };

      dataService.updatePublicationSettings(publicationUpdates);
      
      console.log('üöÄ Schema publicado com sucesso');
    } catch (error) {
      console.error('‚ùå Erro ao publicar schema:', error);
      throw error;
    }
  }, [schema, dataService]);

  const unpublishSchema = useCallback(async () => {
    if (!schema) return;

    try {
      // Atualizar status para rascunho
      const publicationUpdates = {
        status: 'draft' as const,
        publishedAt: undefined,
      };

      dataService.updatePublicationSettings(publicationUpdates);
      
      console.log('üìù Schema despublicado (retornado para rascunho)');
    } catch (error) {
      console.error('‚ùå Erro ao despublicar schema:', error);
      throw error;
    }
  }, [schema, dataService]);

  // ============================================================================
  // VALIDA√á√ÉO
  // ============================================================================

  const validateSchema = useCallback((): ValidationError[] => {
    if (!schema) return [];

    const errors = validateSchemaInternal(schema);
    setValidationErrors(errors);
    
    return errors;
  }, [schema]);

  // ============================================================================
  // AUTO SAVE
  // ============================================================================

  useEffect(() => {
    if (!autoSave || !isDirty) return;

    const autoSaveTimer = setTimeout(() => {
      saveSchema();
    }, autoSaveInterval);

    return () => clearTimeout(autoSaveTimer);
  }, [autoSave, autoSaveInterval, isDirty, saveSchema]);

  // ============================================================================
  // INICIALIZA√á√ÉO
  // ============================================================================

  useEffect(() => {
    loadSchema(schemaId);
  }, [loadSchema, schemaId]);

  // ============================================================================
  // CONTEXT VALUE
  // ============================================================================

  const contextValue: HeadlessEditorContextType = {
    schema,
    isLoading,
    isDirty,
    lastSaved,
    currentStep,
    currentStepIndex,

    loadSchema,
    saveSchema,
    updateStep,
    updateGlobalSettings,
    updatePublicationSettings,

    selectStep,
    goToStep,
    addStep,
    removeStep,

    previewMode,
    setPreviewMode,

    publishSchema,
    unpublishSchema,

    validationErrors,
    validateSchema
  };

  return (
    <HeadlessEditorContext.Provider value={contextValue}>
      {children}
    </HeadlessEditorContext.Provider>
  );
};

