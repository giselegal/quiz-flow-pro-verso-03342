{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "/schemas/component.schema.json",
	"$comment": "Component/Block schema - validates individual quiz components",
	"title": "Component Schema",
	"type": "object",
	"additionalProperties": true,
	"required": ["type"],
	"properties": {
		"id": {
			"type": "string",
			"pattern": "^[a-zA-Z0-9_-]+$",
			"description": "Unique component identifier"
		},
		"type": {
			"type": "string",
			"enum": [
				"heading",
				"text",
				"paragraph",
				"image",
				"video",
				"button",
				"question-single",
				"question-multiple",
				"question-grid",
				"progress-bar",
				"timer",
				"countdown",
				"result-title",
				"result-cta",
				"result-share",
				"offer",
				"testimonial",
				"quiz-intro-header",
				"intro-logo",
				"form",
				"container",
				"spacer",
				"divider",
				"custom"
			],
			"description": "Component type identifier"
		},
		"content": {
			"type": "object",
			"additionalProperties": true,
			"description": "Component content data"
		},
		"properties": {
			"type": "object",
			"additionalProperties": true,
			"description": "Component properties and configuration"
		},
		"styles": {
			"type": "object",
			"additionalProperties": true,
			"description": "Component style overrides"
		},
		"children": {
			"type": "array",
			"items": { "$ref": "#/$defs/component" },
			"description": "Nested child components"
		},
		"metadata": {
			"type": "object",
			"additionalProperties": true,
			"description": "Component metadata"
		}
	},
	"$defs": {
		"component": {
			"type": "object",
			"additionalProperties": true,
			"required": ["type"],
			"properties": {
				"id": {
					"type": "string",
					"pattern": "^[a-zA-Z0-9_-]+$"
				},
				"type": { "type": "string" },
				"content": { "type": "object", "additionalProperties": true },
				"properties": { "type": "object", "additionalProperties": true },
				"styles": { "type": "object", "additionalProperties": true }
			}
		}
	}
}
