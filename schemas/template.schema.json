{
    "$id": "https://quiz-engine.schemas/v1/template.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "id",
        "name",
        "slug",
        "status",
        "schemaVersion",
        "stages",
        "components",
        "logic",
        "outcomes"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "slug": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "draft",
                "published",
                "archived"
            ]
        },
        "schemaVersion": {
            "type": "string"
        },
        "stages": {
            "type": "array",
            "items": {
                "$ref": "stage.schema.json"
            }
        },
        "components": {
            "type": "object",
            "additionalProperties": {
                "$ref": "component.schema.json"
            }
        },
        "logic": {
            "$ref": "logic.schema.json"
        },
        "outcomes": {
            "type": "array",
            "items": {
                "$ref": "outcome.schema.json"
            }
        }
    },
    "additionalProperties": true
}