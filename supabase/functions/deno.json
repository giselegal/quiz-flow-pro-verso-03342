{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom", "dom.iterable", "deno.ns"],
    "strict": false,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true
  },
  "imports": {
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@2",
    "@supabase/realtime-js": "npm:@supabase/realtime-js@2.86.0"
  },
  "lint": {
    "rules": {
      "exclude": ["no-import-prefix", "no-explicit-any", "no-unused-vars"]
    }
  },
  "nodeModulesDir": "auto"
}
